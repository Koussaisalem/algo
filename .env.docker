# Docker Environment Variables
# Copy this file to .env and customize for your environment

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=quantumlab
POSTGRES_USER=quantumlab
POSTGRES_PASSWORD=quantumlab_secure_password_change_me
POSTGRES_PORT=5432

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=8000
LOG_LEVEL=info

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=3000

# ============================================
# NextAuth Configuration
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change_this_to_a_random_32_character_string_minimum
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Database Connection (Full URL)
# ============================================
# Used by both frontend and backend
DATABASE_URL=postgresql://quantumlab:quantumlab_secure_password_change_me@postgres:5432/quantumlab

# ============================================
# Security
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=change_this_to_a_random_jwt_secret_key

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
BACKEND_URL=http://backend:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# ============================================
# Optional: External Services
# ============================================
# REDIS_URL=redis://redis:6379
# SENTRY_DSN=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
